<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跟跑步有关的锻炼项目:"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textColor="#909090"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="腹肌训练"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:textColor="#909090"
            android:onClick="abdominal"
            android:drawableTop="@drawable/health_train_page_four"
            android:id="@+id/rb_trainitem_fuji"
            android:button="@null">
        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="深蹲训练"
            android:gravity="center"
            android:textColor="#909090"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:id="@+id/rb_trainitem_shendun"
            android:onClick="squat"
            android:drawableTop="@drawable/health_train_page_five"
            android:button="@null">
        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="引体向上"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:textColor="#909090"
            android:gravity="center"
            android:onClick="pull_up"
            android:id="@+id/rb_trainitem_yintixiangshang"
            android:drawableTop="@drawable/health_train_page_six"
            android:button="@null">
        </RadioButton>
    </RadioGroup>

</LinearLayout>