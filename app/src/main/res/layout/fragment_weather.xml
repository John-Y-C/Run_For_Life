<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout_details"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weather_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="10"
                android:textColor="#FF26C9DB"
                android:textSize="60sp"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="35sp"
                android:textColor="#FF26C9DB"
                android:text="℃"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_weather_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="地震"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tv_weather_winddir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="龙卷风"
            android:textSize="20sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_weatherfragment_now"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/linearLayout_details"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/linearLayout_details"
        android:layout_toRightOf="@+id/linearLayout_details"/>

    <TextView
        android:id="@+id/tv_weather_sportsuggestion"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout_details"
        android:layout_alignStart="@+id/linearLayout_details"
        android:layout_below="@+id/linearLayout_details"
        android:layout_marginTop="46dp"
        android:text="运动建议"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


</RelativeLayout>