<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#2A2A30">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="95dp"
        android:padding="10dp"
        android:id="@+id/iv_infodetail_img"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_infodetail_img"
        android:id="@+id/tv_infodetail_title"
        android:textColor="#fff"
        android:textSize="15sp"
        android:paddingTop="12dp"
        android:singleLine="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_infodetail_img"
        android:layout_below="@id/tv_infodetail_title"
        android:paddingTop="15dp"
        android:textSize="13sp"
        android:textColor="#ccc"
        android:id="@+id/tv_infodetail_keywords"/>

</RelativeLayout>