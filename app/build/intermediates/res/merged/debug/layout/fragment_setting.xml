<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_mainactivity_sign"
            android:text="点击签到"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_mainactivity_time"
            android:gravity="center"
            android:textColor="#000"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="这里显示签到总天数"
        android:id="@+id/tv_settingframgmeng_signday"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除缓存"
        android:id="@+id/bt_settingfragmeng_cleancache"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="反馈意见"
        android:id="@+id/bt_settingfragmeng_recomend"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查更新"
        android:id="@+id/bt_settingfragmeng_checkupdate"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_settingframgmeng_checkupdate"
        android:visibility="gone"
        android:gravity="center"
        android:text="检查更新中"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/pb_settingfragmeng_progressbar"/>




</LinearLayout>